 <mvc:View
  controllerName="com.piasa.Costos.controller.route.manager.LoadBudget"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:t="sap.ui.table"
  xmlns:u="sap.ui.unified"
>
 <Page>
   <customHeader>
    <core:Fragment
      id="toolHeader"
      fragmentName="com.piasa.Costos.view.layout.ToolHeader" type="XML"
    />
   </customHeader>
   <content>
     <Page
      id="main"
      title="Cargar presupuesto"
      showNavButton="true"
      navButtonPress=".onNavBack"
      class="sapUiResponsiveContentPadding"
     >
      <t:Table
        id="users"
        rows="{budget>/budget}"
        busy="{budget>/loading}"
        busyIndicatorDelay="100"
        visibleRowCountMode="Auto"
        rowHeight="40"
        enableColumnReordering="false"
        selectionMode="None"
        fixedColumnCount="3"
        alternateRowColors="true"
      >
          <t:extension>
            <OverflowToolbar>
              <Title
                id="title"
                text="Presupuesto" 
              />
              <ToolbarSpacer/>
              <u:FileUploader
                id="uploadButton"
                icon="sap-icon://add-document"
                buttonText="Cargar..."
                change=".onUpload"
                sameFilenameAllowed="true"
              />
              <Button
                icon="sap-icon://upload"
                text="Subir"
                press=".onUploadToServer"
              />
            </OverflowToolbar>
          </t:extension>
          <t:columns>
            <t:Column
              width="10rem"
            >
              <Label text="Centro de costo" />
              <t:template>
                <Text 
                  text="{budget>KOSTL}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Cuenta" />
              <t:template>
                <Text 
                  text="{budget>HKONT}"
                />
              </t:template>
            </t:Column>
            <t:Column
              width="6rem"
            >
              <Label text="AÃ±o" />
              <t:template>
                <Text 
                  text="{budget>GJAHR}"
                />
              </t:template>
            </t:Column>
            <t:Column
              width="8rem"
              hAlign="End"
            >
              <Label text="Enero" />
              <t:template>
                <Text 
                  text="{
                    path: 'budget>P1',
                    formatter: '.formatCurrency'
                  }"
                />
              </t:template>
            </t:Column>
            <t:Column
              width="8rem"
              hAlign="End"
            >
              <Label text="Febrero" />
              <t:template>
                <Text 
                  text="{
                    path: 'budget>P2',
                    formatter: '.formatCurrency'
                  }"
                />
              </t:template>
            </t:Column>
            <t:Column
              width="8rem"
              hAlign="End"
            >
              <Label text="Marzo" />
