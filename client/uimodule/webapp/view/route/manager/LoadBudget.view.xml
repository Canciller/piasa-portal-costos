                <Text 
                  text="{
                    path: 'budget>P3',
                    formatter: '.formatCurrency'
                  }"
                />
              </t:template>
            </t:Column>
            <t:Column
              width="8rem"
              hAlign="End"
            >
              <Label text="Abril" />
