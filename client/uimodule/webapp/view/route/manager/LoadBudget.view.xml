 <mvc:View
  controllerName="com.piasa.Costos.controller.route.manager.LoadBudget"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:t="sap.ui.table"
  xmlns:u="sap.ui.unified"
>
 <Page>
   <customHeader>
    <core:Fragment
      id="toolHeader"
      fragmentName="com.piasa.Costos.view.layout.ToolHeader" type="XML"
    />
   </customHeader>
   <content>
     <Page
      id="main"
      title="Cargar presupuesto"
      showNavButton="true"
      navButtonPress=".onNavBack"
     >
      <t:Table
        id="users"
        rows="{budget>/budget}"
        busy="{budget>/loading}"
        busyIndicatorDelay="100"
        visibleRowCountMode="Auto"
        rowHeight="40"
        enableColumnReordering="false"
        selectionMode="None"
      >
          <t:extension>
            <OverflowToolbar>
              <Title
                id="title"
                text="Presupuesto" 
              />
              <ToolbarSpacer/>
              <u:FileUploader
                id="uploadButton"
                icon="sap-icon://add-document"
                buttonText="Cargar..."
                uploadStart=".onUploadStart"
                uploadComplete=".onUploadComplete"
                change=".onUpload"
              />
              <Button
                icon="sap-icon://upload"
                text="Subir"
                press=".handleUploadToServer"
              />
            </OverflowToolbar>
          </t:extension>
          <t:columns>
            <t:Column
            >
              <Label text="c1" />
              <t:template>
                <Text 
                  text="{budget>c1}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="c2" />
              <t:template>
                <Text 
                  text="{budget>c2}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="c3" />
              <t:template>
                <Text 
                  text="{budget>c3}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="c4" />
              <t:template>
                <Text 
                  text="{budget>c4}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="c5" />
              <t:template>
                <Text 
                  text="{budget>c5}"
                />
              </t:template>
            </t:Column>
          </t:columns>
      </t:Table>
     </Page>
   </content>
 </Page>
</mvc:View>