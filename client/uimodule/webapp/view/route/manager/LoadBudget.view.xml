 <mvc:View
  controllerName="com.piasa.Costos.controller.route.manager.LoadBudget"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:t="sap.ui.table"
  xmlns:u="sap.ui.unified"
>
 <Page>
   <customHeader>
    <core:Fragment
      id="toolHeader"
      fragmentName="com.piasa.Costos.view.layout.ToolHeader" type="XML"
    />
   </customHeader>
   <content>
     <Page
      id="main"
      title="Cargar presupuesto"
      showNavButton="true"
      navButtonPress=".onNavBack"
     >
      <t:Table
        id="users"
        rows="{budget>/budget}"
        busy="{budget>/loading}"
        busyIndicatorDelay="100"
        visibleRowCountMode="Auto"
        rowHeight="40"
        enableColumnReordering="false"
        selectionMode="None"
      >
          <t:extension>
            <OverflowToolbar>
              <Title
                id="title"
                text="Presupuesto" 
              />
              <ToolbarSpacer/>
              <u:FileUploader
                id="uploadButton"
                icon="sap-icon://add-document"
                buttonText="Cargar..."
                uploadStart=".onUploadStart"
                uploadComplete=".onUploadComplete"
                change=".onUpload"
              />
              <Button
                icon="sap-icon://upload"
                text="Subir"
                press=".onUploadToServer"
              />
            </OverflowToolbar>
          </t:extension>
          <t:columns>
            <t:Column
              width="10rem"
            >
              <Label text="Centro de costos" />
              <t:template>
                <Text 
                  text="{budget>KOSTL}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Cuenta" />
              <t:template>
                <Text 
                  text="{budget>HKONT}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="AÃ±o" />
              <t:template>
                <Text 
                  text="{budget>GJAHR}"
                />
              </t:template>
            </t:Column>
            <t:Column>
              <Label text="Enero" />
              <t:template>
                <Text 
                  text="{
                    path: 'budget>P1',
                    type: 'sap.ui.model.type.CurrencyType',
                    formatOptions: {
                    }
                  }"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Febrero" />
              <t:template>
                <Text 
                  text="{budget>P2}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Marzo" />
              <t:template>
                <Text 
                  text="{budget>P3}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Abril" />
              <t:template>
                <Text 
                  text="{budget>P4}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Mayo" />
              <t:template>
                <Text 
                  text="{budget>P5}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Junio" />
              <t:template>
                <Text 
                  text="{budget>P6}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Julio" />
              <t:template>
                <Text 
                  text="{budget>P7}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Agosto" />
              <t:template>
                <Text 
                  text="{budget>P8}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Septiembre" />
              <t:template>
                <Text 
                  text="{budget>P9}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Octubre" />
              <t:template>
                <Text 
                  text="{budget>P10}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Noviembre" />
              <t:template>
                <Text 
                  text="{budget>P11}"
                />
              </t:template>
            </t:Column>
            <t:Column
            >
              <Label text="Diciembre" />
              <t:template>
                <Text 
                  text="{budget>P12}"
                />
              </t:template>
            </t:Column>
          </t:columns>
      </t:Table>
     </Page>
   </content>
 </Page>
</mvc:View>