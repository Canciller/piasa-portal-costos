 <mvc:View
  controllerName="com.piasa.Costos.controller.route.manager.ManageAssignments"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:t="sap.ui.table"
>
 <Page>
   <customHeader>
    <core:Fragment
      id="toolHeader"
      fragmentName="com.piasa.Costos.view.layout.ToolHeader" type="XML"
    />
   </customHeader>
   <content>
     <Page
      id="main"
      title="Asignar usuarios"
      showNavButton="true"
      navButtonPress=".onNavBack"
     >
      <f:FlexibleColumnLayout
        id="assignments"
        backgroundDesign="Solid"
      >
        <f:beginColumnPages>
          <mvc:XMLView
            id="beginView"
            viewName="com.piasa.Costos.view.layout.assignments.Users"
          />
        </f:beginColumnPages>
        <f:midColumnPages>
          <mvc:XMLView
            id="detailView"
            viewName="com.piasa.Costos.view.layout.assignments.Assignment"
          />
        </f:midColumnPages>
      </f:FlexibleColumnLayout>
     </Page>
   </content>
 </Page>
</mvc:View>