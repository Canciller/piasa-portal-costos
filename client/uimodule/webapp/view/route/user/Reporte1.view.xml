<mvc:View
    controllerName="com.piasa.Costos.controller.route.user.Reporte1"
		xmlns:c="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:u="sap.ui.unified"
		xmlns="sap.m"
		xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
		xmlns:layout="sap.ui.layout"
    height="100%"
>
  <Page>
    <customHeader>
      <c:Fragment
        id="toolHeader"
        fragmentName="com.piasa.Costos.view.layout.ToolHeader" type="XML"
      />
    </customHeader>
    <content>
      <f:DynamicPage
        id="pageReporte1"
        preserveHeaderStateOnScroll="true"
        headerExpanded="{reporte1/headerExpanded}"
        fitContent="true"
      >
        <!-- DynamicPage Title -->
        <f:title>
          <f:DynamicPageTitle>
            <f:heading>
              <HBox
                alignItems="Center"
              >
                <Button
                  icon="sap-icon://nav-back"
                  press=".onNavBack"
                  class="sapUiTinyMarginEnd"
                  type="Transparent"
                />
                <Title
                  text="{i18n>launchpadUser.tile.reporte1.header}"
                  class="reportTitle"
                />
              </HBox>
            </f:heading>
            <f:actions>
              <ToolbarSpacer/>
            </f:actions>
          </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Header -->
        <f:header>
          <f:DynamicPageHeader pinnable="true">
            <c:Fragment
              id="form"
              fragmentName="com.piasa.Costos.view.layout.reporte1.Reporte1Form"
              type="XML"
            />
          </f:DynamicPageHeader>
        </f:header>

        <f:content>
          <t:Table
            rows="{reportes>/reporte1/data}"
            alternateRowColors="true"
            busy="{reportes>/reporte1/loading}"
            busyIndicatorDelay="100"
            rowHeight="30px"
            visibleRowCountMode="Auto"
            selectionMode="None"
            id="table"
            fixedColumnCount="2"
            cellClick=".onCellClick"
            showOverlay="{= !${reportes>/enabled}}"
          >
            <t:columns>
              <t:Column
                width="7rem"
                filterProperty="HKONT"
                sortProperty="HKONT"
              >
                <Label text="Cuenta" />
                <t:template>
                  <Text
                    text="{
                        path : 'reportes>HKONT', 
                        type : 'sap.ui.model.odata.type.String', 
                        constraints: { 
                            isDigitSequence : true,
                            maxLength : 10
                        }
                      }"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="16rem"
                filterProperty="TXT50"
                sortProperty="TXT50"
              >
                <Label text="DescripciÃ³n" />
                <t:template>
                  <Text
                    text="{reportes>TXT50}"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Actual"
                sortProperty="Actual"
              >
                <Label text="Real" />
                <t:template>
                  <Text text="{
                    path: 'reportes>Actual',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Budget"
                sortProperty="Budget"
              >
                <Label text="Presupuesto" />
                <t:template>
                  <Text text="{
                    path: 'reportes>Budget',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Actual_Accum"
                sortProperty="Actual_Accum"
              >
                <Label text="Real Acumulado" />
                <t:template>
                  <Text text="{
                    path: 'reportes>Actual_Accum',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Budget_Accum"
                sortProperty="Budget_Accum"
              >
                <Label text="Presupuesto Acumulado" />
                <t:template>
                  <Text text="{
                    path: 'reportes>Budget_Accum',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Var_vs_Budget"
                sortProperty="Var_vs_Budget"
              >
                <Label text="Var vs Ppto" />
                <t:template>
                  <Text text="{
                    path: 'reportes>Var_vs_Budget',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Percentage_1"
                sortProperty="Percentage_1"
              >
                <Label text="%" />
                <t:template>
                  <Text text="{
                    path: 'reportes>Percentage_1',
                    formatter: '.format.percentage'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Var_vs_AA"
                sortProperty="Var_vs_AA"
              >
                <Label text="Var vs AA" />
                <t:template>
                  <Text text="{
                    path: 'reportes>Var_vs_AA',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Percentage_2"
                sortProperty="Percentage_2"
              >
                <Label text="%" />
                <t:template>
                  <Text text="{
                    path: 'reportes>Percentage_2',
                    formatter: '.format.percentage'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
            </t:columns>
          </t:Table>
        </f:content>
      </f:DynamicPage>
    </content>
  </Page>
</mvc:View>