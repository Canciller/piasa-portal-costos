<mvc:View
    controllerName="com.piasa.Costos.controller.route.user.Reporte1"
		xmlns:c="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:u="sap.ui.unified"
		xmlns="sap.m"
		xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
		xmlns:layout="sap.ui.layout"
    height="100%"
    c:require="{
      money: 'com/piasa/Costos/formatter/money',
      percentage: 'com/piasa/Costos/formatter/percentage'
    }"
>
  <Page>
    <customHeader>
      <c:Fragment
        id="toolHeader"
        fragmentName="com.piasa.Costos.view.layout.ToolHeader" type="XML"
      />
    </customHeader>
    <content>
      <f:DynamicPage
        id="pageReporte1"
        preserveHeaderStateOnScroll="true"
        headerExpanded="{reporte1/headerExpanded}"
        fitContent="true"
      >
        <!-- DynamicPage Title -->
        <f:title>
          <f:DynamicPageTitle>
            <f:heading>
              <HBox
                alignItems="Center"
              >
                <Button
                  icon="sap-icon://nav-back"
                  press=".onNavBack"
                  class="sapUiTinyMarginEnd"
                  type="Transparent"
                />
                <Title
                  text="{i18n>launchpadUser.tile.reporte1.header}"
                  class="reportTitle"
                />
              </HBox>
            </f:heading>
            <f:actions>
              <ToolbarSpacer/>
            </f:actions>
          </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Header -->
        <f:header>
          <f:DynamicPageHeader
            pinnable="true"
            class="reporteHeader"
          >
            <c:Fragment
              fragmentName="com.piasa.Costos.view.layout.reporte1.Reporte1Form"
              type="XML"
            />
          </f:DynamicPageHeader>
        </f:header>

        <f:content>
          <t:Table
            rows="{r1>/data}"
            alternateRowColors="true"
            busy="{r1>/loading}"
            busyIndicatorDelay="100"
            rowHeight="30px"
            visibleRowCountMode="Auto"
            selectionBehavior="RowOnly"
            selectionMode="Single"
            id="table"
            fixedColumnCount="1"
            cellClick=".onCellClick"
            showOverlay="{= !${r1>/abtei/enabled}}"
          >
            <t:columns>
              <t:Column
                width="16rem"
                filterProperty="DESC1"
                sortProperty="DESC1"
              >
                <Label text="Cuenta Monthly Package Manual" />
                <t:template>
                  <Text
                    text="{r1>DESC1}"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Actual_CY"
                sortProperty="Actual_CY"
              >
                <Label text="Real" />
                <t:template>
                  <Text text="{
                    path: 'r1>Actual_CY',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Budget_CY"
                sortProperty="Budget_CY"
              >
                <Label text="Presupuesto" />
                <t:template>
                  <Text text="{
                    path: 'r1>Budget_CY',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Actual_LY"
                sortProperty="Actual_LY"
              >
                <Label text="Real AA" />
                <t:template>
                  <Text text="{
                    path: 'r1>Actual_LY',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Budget_LY"
                sortProperty="Budget_LY"
              >
                <Label text="Presupuesto AA" />
                <t:template>
                  <Text text="{
                    path: 'r1>Budget_LY',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Var_vs_Ppto_CY"
                sortProperty="Var_vs_Ppto_CY"
              >
                <Label text="Var.$ Real vs Ppto" />
                <t:template>
                  <Text
                    text="{
                      path: 'r1>Var_vs_Ppto_CY',
                      formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Percentage_1_CY"
                sortProperty="Percentage_1_CY"
              >
                <Label text="Var.% Real vs Ppto" />
                <t:template>
                  <Text text="{
                    path: 'r1>Percentage_1_CY',
                    formatter: 'percentage'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Var_vs_AA_CY"
                sortProperty="Var_vs_AA_CY"
              >
                <Label text="Var.$ Real vs Real AA" />
                <t:template>
                  <Text text="{
                    path: 'r1>Var_vs_AA_CY',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Percentage_2_CY"
                sortProperty="Percentage_2_CY"
              >
                <Label text="Var.% Real vs Real AA" />
                <t:template>
                  <Text text="{
                    path: 'r1>Percentage_2_CY',
                    formatter: 'percentage'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Actual_Accum_CY"
                sortProperty="Actual_Accum_CY"
              >
                <Label text="Real Acumulado" />
                <t:template>
                  <Text text="{
                    path: 'r1>Actual_Accum_CY',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Budget_Accum_CY"
                sortProperty="Budget_Accum_CY"
              >
                <Label text="Presupuesto Acumulado" />
                <t:template>
                  <Text text="{
                    path: 'r1>Budget_Accum_CY',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Actual_Accum_LY"
                sortProperty="Actual_Accum_LY"
              >
                <Label text="Real Acumulado AA" />
                <t:template>
                  <Text text="{
                    path: 'r1>Actual_Accum_LY',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Budget_Accum_LY"
                sortProperty="Budget_Accum_LY"
              >
                <Label text="Presupuesto Acumulado AA" />
                <t:template>
                  <Text text="{
                    path: 'r1>Budget_Accum_LY',
                    formatter: '.format.money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Var_vs_Ppto_LY"
                sortProperty="Var_vs_Ppto_LY"
              >
                <Label text="Var.$ Real Acumulado vs Ppto Acumulado" />
                <t:template> 
                  <Text text="{
                    path: 'r1>Var_vs_Ppto_LY',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Percentage_1_LY"
                sortProperty="Percentage_1_LY"
              >
                <Label text="Var.% Real Acumulado vs Ppto Acumulado" />
                <t:template>
                  <Text text="{
                    path: 'r1>Percentage_1_LY',
                    formatter: 'percentage'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Var_vs_AA_LY"
                sortProperty="Var_vs_AA_LY"
              >
                <Label text="Var.$ Real Acumulado vs Real AA Acumulado" />
                <t:template>
                  <Text text="{
                    path: 'r1>Var_vs_AA_LY',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="Percentage_2_LY"
                sortProperty="Percentage_2_LY"
              >
                <Label text="Var.% Real Acumulado vs Real AA Acumulado" />
                <t:template>
                  <Text text="{
                    path: 'r1>Percentage_2_LY',
                    formatter: 'percentage'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
            </t:columns>
          </t:Table>
        </f:content>
      </f:DynamicPage>
    </content>
  </Page>
</mvc:View>