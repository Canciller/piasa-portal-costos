<mvc:View
    controllerName="com.piasa.Costos.controller.route.user.Reporte2"
		xmlns:c="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:u="sap.ui.unified"
		xmlns="sap.m"
		xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
		xmlns:layout="sap.ui.layout"
    height="100%"
    c:require="{
      money: 'com/piasa/Costos/formatter/money'
    }"
>
  <Page>
    <customHeader>
      <c:Fragment
        id="toolHeader"
        fragmentName="com.piasa.Costos.view.layout.ToolHeader" type="XML"
      />
    </customHeader>
    <content>
      <f:DynamicPage
        id="pageReporte1"
        preserveHeaderStateOnScroll="true"
        fitContent="true"
      >
        <!-- DynamicPage Title -->
        <f:title>
          <f:DynamicPageTitle>
            <f:heading>
              <HBox
                alignItems="Center"
              >
                <Button
                  icon="sap-icon://nav-back"
                  press=".onNavBack"
                  class="sapUiTinyMarginEnd"
                  type="Transparent"
                />
                <Title
                  text="{i18n>launchpadUser.tile.reporte2.header}"
                  class="reportTitle"
                />
              </HBox>
            </f:heading>
            <f:actions>
              <ToolbarSpacer/>
            </f:actions>
          </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Header -->
        <f:header>
          <f:DynamicPageHeader pinnable="true">
            <c:Fragment
              fragmentName="com.piasa.Costos.view.layout.reporte2.Reporte2Form"
              type="XML"
            />
          </f:DynamicPageHeader>
        </f:header>

        <f:content>
          <t:TreeTable
            rows="{
              path: 'r2>/tree/data',
              parameters: {
                arrayNames: ['data'],
                numberOfExpandedLevels: 2
              }
            }"
            alternateRowColors="true"
            busy="{r2>/loading}"
            busyIndicatorDelay="100"
            rowHeight="30px"
            visibleRowCountMode="Auto"
            selectionBehavior="RowOnly"
            selectionMode="Single"
            id="table"
            fixedColumnCount="2"
            showOverlay="{= !${r2>/abtei/enabled}}"
            groupHeaderProperty="DESC1_"
            useGroupMode="true"
          >
            <t:columns>
              <t:Column
                width="12rem"
                filterProperty="TXT50"
                sortProperty="TXT50"
              >
                <Label text="Descripción" />
                <t:template>
                  <Text
                    text="{r2>TXT50}"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="4rem"
                filterProperty="GJAHR"
                sortProperty="GJAHR"
              >
                <Label
                  text="Año"
                />
                <t:template>
                  <Text
                    text="{r2>GJAHR}"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P01"
                sortProperty="P01"
              >
                <Label text="Enero" />
                <t:template>
                  <Text text="{
                    path: 'r2>P01',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P02"
                sortProperty="P02"
              >
                <Label text="Febrero" />
                <t:template>
                  <Text text="{
                    path: 'r2>P02',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P03"
                sortProperty="P03"
              >
                <Label text="Marzo" />
                <t:template>
                  <Text text="{
                    path: 'r2>P03',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P04"
                sortProperty="P04"
              >
                <Label text="Abril" />
                <t:template>
                  <Text text="{
                    path: 'r2>P04',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P05"
                sortProperty="P05"
              >
                <Label text="Mayo" />
                <t:template>
                  <Text text="{
                    path: 'r2>P05',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P06"
                sortProperty="P06"
              >
                <Label text="Junio" />
                <t:template>
                  <Text text="{
                    path: 'r2>P06',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P07"
                sortProperty="P07"
              >
                <Label text="Julio" />
                <t:template>
                  <Text text="{
                    path: 'r2>P07',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P08"
                sortProperty="P08"
              >
                <Label text="Agosto" />
                <t:template>
                  <Text text="{
                    path: 'r2>P08',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P09"
                sortProperty="P09"
              >
                <Label text="Septiembre" />
                <t:template>
                  <Text text="{
                    path: 'r2>P09',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P10"
                sortProperty="P10"
              >
                <Label text="Octubre" />
                <t:template>
                  <Text text="{
                    path: 'r2>P10',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P11"
                sortProperty="P11"
              >
                <Label text="Noviembre" />
                <t:template>
                  <Text text="{
                    path: 'r2>P11',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
              <t:Column
                width="8rem"
                hAlign="Right"
                filterProperty="P12"
                sortProperty="P12"
              >
                <Label text="Diciembre" />
                <t:template>
                  <Text text="{
                    path: 'r2>P12',
                    formatter: 'money'
                    }"
                    wrapping="false"
                  />
                </t:template>
              </t:Column>
            </t:columns>
          </t:TreeTable>
        </f:content>
      </f:DynamicPage>
    </content>
  </Page>
</mvc:View>