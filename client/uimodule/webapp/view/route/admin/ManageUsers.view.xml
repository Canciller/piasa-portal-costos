 <mvc:View
  controllerName="com.piasa.Costos.controller.route.admin.ManageUsers"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:t="sap.ui.table"
>
 <Page>
   <customHeader>
    <core:Fragment
      id="toolHeader"
      fragmentName="com.piasa.Costos.view.layout.ToolHeader" type="XML"
    />
   </customHeader>
   <content>
     <Page
      id="main"
      title="Administrar usuarios"
      showNavButton="true"
      navButtonPress=".onNavBack"
     >
     <t:Table
      id="users"
      rows="{users>/users}"
      visibleRowCountMode="Auto"
     >
        <t:columns>
          <t:Column
            sortProperty="username"
            filterProperty="username"
          >
            <Label text="Nombre de usuario" />
            <t:template>
              <Text
                text="{users>username}"
              />
            </t:template>
          </t:Column>
          <t:Column
            sortProperty="email"
            filterProperty="email"
          >
            <Label text="Email" />
            <t:template>
              <Input
                editable="false"
                value="{users>email}"
              />
            </t:template>
          </t:Column>
          <t:Column
            sortProperty="name"
            filterProperty="name"
          >
            <Label text="Nombre" />
            <t:template>
              <Input
                editable="false"
                value="{users>name}"
              />
            </t:template>
          </t:Column>
          <t:Column
            sortProperty="role"
          >
            <Label text="Tipo" />
            <t:template>
              <Select
                editable="false"
                selectedKey="{users>role}"
              >
                <core:Item key="A" text="{i18n>role.A}" />
                <core:Item key="M" text="{i18n>role.M}" />
                <core:Item key="U" text="{i18n>role.U}" />
              </Select>
            </t:template>
          </t:Column>
          <t:Column
            width="4rem"
          >
            <Label text="Activo" />
            <t:template>
              <CheckBox
                editable="false"
                selected="{users>isActive}"
              />
            </t:template>
          </t:Column>
          <t:Column
            sortProperty="updatedAt"
          >
            <Label text="Fecha de actualizacion" />
            <t:template>
              <Text text="{users>updatedAt}" />
            </t:template>
          </t:Column>
          <t:Column
            sortProperty="createdAt"
          >
            <Label text="Fecha de creacion" />
            <t:template>
              <Text text="{users>createdAt}" />
            </t:template>
          </t:Column>
        </t:columns>
     </t:Table>
     </Page>
   </content>
 </Page>
</mvc:View>