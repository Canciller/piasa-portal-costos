 <mvc:View
  controllerName="com.piasa.Costos.controller.route.admin.ManageUsers"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:t="sap.ui.table"
>
 <Page>
   <customHeader>
    <core:Fragment
      id="toolHeader"
      fragmentName="com.piasa.Costos.view.layout.ToolHeader" type="XML"
    />
   </customHeader>
   <content>
     <Page
      id="main"
      title="Administrar usuarios"
      showNavButton="true"
      navButtonPress=".onNavBack"
     >
     <t:Table
      id="users"
      rows="{users>/users}"
      visibleRowCountMode="Auto"
      enableColumnReordering="false"
     >
				<t:extension>
					<OverflowToolbar>
            <Title
              id="title"
              text="Usuarios" 
            />
						<ToolbarSpacer/>
						<Button
              icon="sap-icon://add"
              text="Crear"
              press=".handleCreate"
            />
						<Button
							icon="sap-icon://refresh"
							tooltip="Refrescar"
              press=".handleRefresh"
            />
					</OverflowToolbar>
        </t:extension>
				<t:rowSettingsTemplate>
					<t:RowSettings highlight="{= ${users>new} ? 'Success' : (${users>editable} ? 'Information' : 'None') }" />
				</t:rowSettingsTemplate>
        <t:columns>
          <t:Column
            sortProperty="username"
            filterProperty="username"
          >
            <Label text="Nombre de usuario" />
            <t:template>
              <Input
                editable="{= ${users>new} ? true : false }"
                value="{users>username}"
              />
            </t:template>
          </t:Column>
          <t:Column
            sortProperty="email"
            filterProperty="email"
          >
            <Label text="Email" />
            <t:template>
              <Input
                editable="{users>editable}"
                value="{users>email}"
              />
            </t:template>
          </t:Column>
          <t:Column
            sortProperty="name"
            filterProperty="name"
          >
            <Label text="Nombre" />
            <t:template>
              <Input
                editable="{users>editable}"
                value="{users>name}"
              />
            </t:template>
          </t:Column>
          <t:Column
            sortProperty="role"
          >
            <Label text="Tipo" />
            <t:template>
              <Select
                editable="{users>editable}"
                selectedKey="{users>role}"
              >
                <core:Item key="A" text="{i18n>role.A}" />
                <core:Item key="M" text="{i18n>role.M}" />
                <core:Item key="U" text="{i18n>role.U}" />
              </Select>
            </t:template>
          </t:Column>
          <t:Column
            width="4rem"
          >
            <Label text="Activo" />
            <t:template>
              <CheckBox
                editable="{users>editable}"
                selected="{users>isActive}"
              />
            </t:template>
          </t:Column>
          <t:Column
            sortProperty="updatedAt"
          >
            <Label text="Fecha de actualizacion" />
            <t:template>
              <Text text="{
                path: 'users>updatedAt',
                type: 'sap.ui.model.type.DateTime',
                formatOptions: {
                  style: 'medium'
                }
              }" />
            </t:template>
          </t:Column>
          <t:Column
            sortProperty="createdAt"
          >
            <Label text="Fecha de creacion" />
            <t:template>
              <Text text="{
                path: 'users>createdAt',
                type: 'sap.ui.model.type.DateTime',
                formatOptions: {
                  style: 'medium'
                }
              }" />
            </t:template>
          </t:Column>
          <t:Column
            width="5.5rem"
          >
            <t:template>
              <HBox>
                <Button
                  icon="{= ${users>editable} ? 'sap-icon://cancel' : 'sap-icon://edit' }"
                  type="{= ${users>editable} ? 'Reject' : 'Default' }"
                  press=".handleEditOrCancel"
                  class='tableActionButton'
                />
                <Button
                  icon="{= ${users>editable} ? 'sap-icon://save' : 'sap-icon://delete' }"
                  type="{= ${users>editable} ? 'Default' : 'Reject' }"
                  press=".handleSaveOrDelete"
                  class='tableActionButton'
                />
              </HBox>
            </t:template>
          </t:Column>
        </t:columns>
     </t:Table>
     </Page>
   </content>
 </Page>
</mvc:View>