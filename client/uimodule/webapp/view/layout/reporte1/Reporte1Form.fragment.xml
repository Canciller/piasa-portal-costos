<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
  <HBox
    alignItems="End"
  >
    <VBox
      class="sapUiSmallMarginEnd"
    >
      <Text
        text="Centros de costos"
      />
      <MultiComboBox
        id="multiComboBox"
        busy="{reportes>/kostl/loading}"
        busyIndicatorDelay="100"
        width="26rem"
        showSecondaryValues="true"
        items="{
          path: 'reportes>/kostl/data',
          sorter: {
            path: 'reportes>KOSTL'
          }
        }"
      >
        <core:ListItem key="{reportes>KOSTL}" text="{reportes>KOSTL}" additionalText="{reportes>LTEXT}" />
      </MultiComboBox>
    </VBox>
    <VBox
      class="sapUiSmallMarginEnd"
    >
      <Text
        text="AÃ±o/mes"
      />
      <DatePicker
        id="datePicker"
        class="sapUiSmallMarginEnd"
        displayFormat="yyyy/MM"
      />
    </VBox>
    <Button 
      type="Emphasized"
      press=".onReady"
      text="Listo"
      icon="sap-icon://accept"
    />
	</HBox>
</core:FragmentDefinition>