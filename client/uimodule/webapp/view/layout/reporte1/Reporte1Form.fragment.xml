<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
  <HBox
    alignItems="End"
  >
    <VBox
      class="sapUiSmallMarginEnd"
    >
      <Text
        text="Centros de costo"
      />
      <MultiComboBox
        id="multiComboBox"
        busy="{reportes>/kostl/loading}"
        busyIndicatorDelay="100"
        width="26rem"
        showSecondaryValues="true"
        items="{
          path: 'reportes>/kostl/data',
          sorter: {
            path: 'reportes>KOSTL'
          }
        }"
        enabled="{reportes>/enabled}"
      >
        <core:ListItem
          key="{reportes>KOSTL}"
          text="{
              path : 'reportes>KOSTL', 
              type : 'sap.ui.model.odata.type.String', 
              constraints: { 
                  isDigitSequence : true,
                  maxLength : 10
              }
            }"
          additionalText="{reportes>LTEXT}"
        />
      </MultiComboBox>
    </VBox>
    <VBox
      class="sapUiSmallMarginEnd"
    >
      <Text
        text="AÃ±o/mes"
      />
      <DatePicker
        id="datePicker"
        class="sapUiSmallMarginEnd"
        value="{reportes>/date}"
        displayFormat="yyyy/MM"
        valueFormat="MM/dd/yyyy"
        enabled="{reportes>/enabled}"
      />
    </VBox>
    <Button 
      type="Emphasized"
      press=".onReady"
      text="Listo"
      icon="sap-icon://accept"
      enabled="{reportes>/enabled}"
    />
	</HBox>
</core:FragmentDefinition>