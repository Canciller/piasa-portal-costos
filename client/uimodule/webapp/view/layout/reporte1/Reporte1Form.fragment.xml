<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
  <VBox>
    <HBox>
      <VBox
        class="sapUiSmallMarginEnd"
      >
        <layoutData>
          <FlexItemData
            styleClass="reporteControl"
          />
        </layoutData>
        <items>
          <Text
            text="Ceco Frutarom"
          />
          <MultiComboBox
            id="ABTEI"
            busy="{reportes>/abtei/loading}"
            busyIndicatorDelay="80"
            showSecondaryValues="false"
            items="{
              path: 'reportes>/abtei/data',
              sorter: {
                path: 'reportes>ABTEI'
              }
            }"
            enabled="{reportes>/enabled}"
            selectionChange=".onChangeABTEI"
          >
            <core:ListItem
              key="{reportes>ABTEI}"
              text="{reportes>ABTEI}"
            />
          </MultiComboBox>
        </items>
      </VBox>
      <VBox
        class="sapUiSmallMarginEnd"
      >
        <layoutData>
          <FlexItemData
            styleClass="reporteControl"
          />
        </layoutData>
        <items>
          <Text
            text="Dirección"
          />
          <MultiComboBox
            id="VERAK"
            busy="{reportes>/verak/loading}"
            busyIndicatorDelay="80"
            showSecondaryValues="false"
            items="{
              path: 'reportes>/verak/data',
              sorter: {
                path: 'reportes>VERAK'
              }
            }"
            enabled="{reportes>/enabled}"
            selectionChange=".onChangeVERAK"
          >
            <core:ListItem
              key="{reportes>VERAK}"
              text="{reportes>VERAK}"
            />
          </MultiComboBox>
        </items>
      </VBox>
      <VBox
        class="sapUiSmallMarginEnd"
      >
        <layoutData>
          <FlexItemData
            styleClass="reporteControl"
          />
        </layoutData>
        <items>
          <Text
            text="Centro de costo"
          />
          <MultiComboBox
            id="KOSTL"
            busy="{reportes>/kostl/loading}"
            busyIndicatorDelay="80"
            showSecondaryValues="true"
            items="{
              path: 'reportes>/kostl/data',
              sorter: {
                path: 'reportes>KOSTL'
              }
            }"
            enabled="{reportes>/enabled}"
          >
            <core:ListItem
              key="{reportes>KOSTL}"
              text="{
                  path : 'reportes>KOSTL', 
                  type : 'sap.ui.model.odata.type.String', 
                  constraints: { 
                      isDigitSequence : true,
                      maxLength : 10
                  }
                }"
              additionalText="{reportes>LTEXT}"
            />
          </MultiComboBox>
        </items>
      </VBox>
    </HBox>
    <HBox
      class="sapUiTinyMarginTop"
      alignItems="End"
    >
      <VBox
        class="sapUiSmallMarginEnd"
      >
        <Text
          text="Año/mes"
        />
        <DatePicker
          id="datePicker"
          class="sapUiSmallMarginEnd"
          value="{reportes>/date}"
          displayFormat="yyyy/MM"
          valueFormat="MM/dd/yyyy"
          enabled="{reportes>/enabled}"
        />
      </VBox>
      <Button 
        type="Emphasized"
        press=".onReady"
        text="Listo"
        icon="sap-icon://accept"
        enabled="{reportes>/enabled}"
        class="sapUiSmallMarginEnd"
      />
      <Button
        icon="sap-icon://action"
        text="Exportar"
        press=".onExport"
        type="Success"
        busy="{reportes>/exporting}"
        busyIndicatorDelay="100"
        enabled="{= ${reportes>/enabled} ? (!${reportes>/reporte1/empty} ? true : false) : false }"
      />
    </HBox>
</VBox>
</core:FragmentDefinition>