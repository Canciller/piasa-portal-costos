<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
  <VBox>
    <HBox
    >
      <VBox
        class="sapUiSmallMarginEnd sapUiSmallMarginTop"
      >
        <layoutData>
          <FlexItemData
            styleClass="reporteControl"
          />
        </layoutData>
        <items>
          <Text
            text="Ceco Frutarom"
          />
          <MultiComboBox
            id="ABTEI"
            busy="{r2>/abtei/loading}"
            busyIndicatorDelay="80"
            showSecondaryValues="false"
            items="{
              path: 'r2>/abtei/data',
              sorter: {
                path: 'r2>ABTEI'
              }
            }"
            enabled="{r2>/abtei/enabled}"
            selectionChange=".onChangeABTEI"
            selectedKeys="{r2>/abtei/selectedKeys}"
          >
            <core:ListItem
              key="{r2>ABTEI}"
              text="{r2>ABTEI}"
            />
          </MultiComboBox>
        </items>
      </VBox>
      <VBox
        class="sapUiSmallMarginEnd sapUiSmallMarginTop"
      >
        <layoutData>
          <FlexItemData
            styleClass="reporteControl controlVERAK"
          />
        </layoutData>
        <items>
          <Text
            text="Dirección"
          />
          <MultiComboBox
            id="VERAK"
            busy="{r2>/verak/loading}"
            busyIndicatorDelay="80"
            showSecondaryValues="false"
            items="{
              path: 'r2>/verak/data',
              sorter: {
                path: 'r2>VERAK'
              }
            }"
            enabled="{= ${r2>/verak/enabled}}"
            selectionChange=".onChangeVERAK"
            selectedKeys="{r2>/verak/selectedKeys}"
          >
            <core:ListItem
              key="{r2>VERAK}"
              text="{r2>VERAK}"
            />
          </MultiComboBox>
        </items>
      </VBox>
      <VBox
        class="sapUiSmallMarginTop"
      >
        <layoutData>
          <FlexItemData
            styleClass="reporteControl controlKOSTL"
          />
        </layoutData>
        <items>
          <Text
            text="Centro de costo"
          />
          <MultiComboBox
            id="KOSTL"
            busy="{r2>/kostl/loading}"
            busyIndicatorDelay="80"
            showSecondaryValues="true"
            items="{
              path: 'r2>/kostl/data',
              sorter: {
                path: 'r2>KOSTL'
              }
            }"
            selectionChange=".onChangeKOSTL"
            enabled="{r2>/kostl/enabled}"
            selectedKeys="{r2>/kostl/selectedKeys}"
          >
            <core:ListItem
              key="{r2>KOSTL}"
              text="{
                  path : 'r2>KOSTL', 
                  type : 'sap.ui.model.odata.type.String', 
                  constraints: { 
                      isDigitSequence : true,
                      maxLength : 10
                  }
                }"
              additionalText="{r2>LTEXT}"
            />
          </MultiComboBox>
        </items>
      </VBox>
    </HBox>
    <HBox
      class="sapUiTinyMarginTop"
      alignItems="End"
    >
      <VBox
        class="sapUiSmallMarginEnd"
      >
        <Text
          text="Año"
        />
        <DatePicker
          id="datePicker"
          class="sapUiSmallMarginEnd"
          value="{r2>/date}"
          displayFormat="yyyy"
          valueFormat="MM/dd/yyyy"
          enabled="{r2>/abtei/enabled}"
        />
      </VBox>
      <Button 
        type="Emphasized"
        press=".onReady"
        text="Listo"
        icon="sap-icon://accept"
        class="sapUiSmallMarginEnd"
        enabled="{= ${r2>/enabled} ? (${r2>/kostl/enabled} ? (${r2>/kostl/empty} ? false : true) : false) : false}"
      />
      <Button
        icon="sap-icon://action"
        text="Exportar"
        press=".onExport"
        type="Success"
        enabled="{= !${r2>/empty}}"
        busyIndicatorDelay="100"
      />
    </HBox>
</VBox>
</core:FragmentDefinition>