<mvc:View
  controllerName="com.piasa.Costos.controller.layout.assignments.Assignment"
  xmlns="sap.uxap"
  xmlns:m="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
>
	<ObjectPageLayout
    headerContentPinnable="false"
    preserveHeaderStateOnScroll="true"
    useIconTabBar="true"
  >
    <headerTitle>
      <ObjectPageDynamicHeaderTitle>
        <expandedHeading>
          <m:Title
            text="{users>/user/name}"
            wrapping="false"
          />
        </expandedHeading>

        <snappedHeading>
          <m:Title
            text="{users>/user/name}"
            wrapping="false"
          />
        </snappedHeading>
      </ObjectPageDynamicHeaderTitle>
    </headerTitle>

    <headerContent>
      <m:FormattedText
        htmlText="{assignments>/subtitle}"
      />
    </headerContent>

		<sections>
			<ObjectPageSection
        title="Centros de costo"
      >
				<subSections>
					<ObjectPageSubSection>
						<blocks>
              <core:Fragment
                fragmentName="com.piasa.Costos.view.layout.assignments.AssignmentKOSTL"
                type="XML"
              />
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection
        title="Grupos de cuentas"
      >
				<subSections>
					<ObjectPageSubSection>
						<blocks>
              <core:Fragment
                fragmentName="com.piasa.Costos.view.layout.assignments.AssignmentGROUP"
                type="XML"
              />
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>